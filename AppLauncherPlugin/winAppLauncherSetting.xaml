<Window x:Class="AppLauncherPlugin.winAppLauncherSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="应用启动器设置" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 设置选项 -->
        <GroupBox Header="基本设置" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <CheckBox Name="chkEnableStartMenu" Content="启用开始菜单应用扫描" Margin="0,5"/>
                <CheckBox Name="chkEnableSystemApps" Content="启用系统应用" Margin="0,5"/>
                <CheckBox Name="chkLogLaunches" Content="记录应用启动日志" Margin="0,5"/>
                <Button Name="btnRefreshApps" Content="刷新应用列表" Width="120" HorizontalAlignment="Left" Margin="0,10,0,0" Click="btnRefreshApps_Click"/>
            </StackPanel>
        </GroupBox>
        
        <!-- 自定义应用管理 -->
        <GroupBox Header="自定义应用管理" Grid.Row="1">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 应用列表 -->
                <DataGrid Name="dgCustomApps" Grid.Row="0" AutoGenerateColumns="False" 
                         CanUserAddRows="False" SelectionMode="Single" Margin="0,0,0,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="应用名称" Binding="{Binding Name}" Width="150"/>
                        <DataGridTextColumn Header="应用路径" Binding="{Binding Path}" Width="300"/>
                        <DataGridTextColumn Header="启动参数" Binding="{Binding Arguments}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- 添加/编辑应用 -->
                <GroupBox Header="添加/编辑应用" Grid.Row="1" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label Content="应用名称:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox Name="txtAppName" Grid.Row="0" Grid.Column="1" Margin="5"/>
                        
                        <Label Content="应用路径:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox Name="txtAppPath" Grid.Row="1" Grid.Column="1" Margin="5"/>
                        <Button Name="btnBrowse" Content="浏览..." Grid.Row="1" Grid.Column="2" Margin="5" Click="btnBrowse_Click"/>
                        
                        <Label Content="启动参数:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox Name="txtAppArgs" Grid.Row="2" Grid.Column="1" Margin="5"/>
                    </Grid>
                </GroupBox>
                
                <!-- 操作按钮 -->
                <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
                    <Button Name="btnAddApp" Content="添加应用" Width="80" Margin="5" Click="btnAddApp_Click"/>
                    <Button Name="btnUpdateApp" Content="更新应用" Width="80" Margin="5" Click="btnUpdateApp_Click"/>
                    <Button Name="btnDeleteApp" Content="删除应用" Width="80" Margin="5" Click="btnDeleteApp_Click"/>
                    <Button Name="btnTestApp" Content="测试启动" Width="80" Margin="5" Click="btnTestApp_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- 底部按钮 -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="btnViewApps" Content="查看可用应用" Width="120" Margin="5" Click="btnViewApps_Click"/>
            <Button Name="btnSave" Content="保存设置" Width="80" Margin="5" Click="btnSave_Click"/>
            <Button Name="btnCancel" Content="取消" Width="80" Margin="5" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>