<Window x:Class="ForegroundAppPlugin.winForegroundAppSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ForegroundApp Plugin Settings" Height="150" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Jitter Delay (ms):"/>
            <TextBox x:Name="TextBox_JitterDelay" Margin="0,0,0,10"/>
            <Button Content="Save" Click="Button_Save_Click"/>
        </StackPanel>
    </Grid>
</Window>